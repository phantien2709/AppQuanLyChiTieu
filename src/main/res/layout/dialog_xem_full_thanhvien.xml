<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/txtChiTietThanhVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi Tiết Thành Viên"
                style="@style/TitleTheme"
                android:paddingTop="10dp"
                android:paddingLeft="50dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imgCloseXemThanhVien"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_margin="5dp"
                app:tint="#FF0000"
                android:src="@drawable/icon_clear"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/txtTenThanhVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TenThanhVien:   "
                android:textStyle="bold"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/txtDlShowTenThanhVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aaaaaaaaaaaaaaaa"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/txtNgaySinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Sinh:          "
                android:textStyle="bold"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/txtDlShowNgaySinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aaaaaaaaaaaaaaaa"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/txtGioiTinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới Tính:            "
                android:textStyle="bold"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/txtDlShowGioiTinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aaaaaaaaaaaaaaaa"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/txtVaiVe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vai Vế:                 "
                android:textStyle="bold"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/txtDlShowVaiVe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aaaaaaaaaaaaaaaa"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>