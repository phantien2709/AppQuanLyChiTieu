<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="1000dp"
           android:layout_margin="10dp">
           <TextView
               android:id="@+id/txtTenLoai"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="duoc cho"
               android:textSize="18dp"
               android:padding="10dp"
               android:layout_weight="1"
               />
           <TextView
               android:id="@+id/txtCustomTen"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cha mแบน cho"
               android:textSize="18sp"
               android:padding="10dp"
               android:layout_weight="1"
               />

           <TextView
               android:id="@+id/txtCustomNgay"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:padding="10dp"
               android:text="15/5/2022"
               android:textSize="18sp" />
           <TextView
               android:id="@+id/txtCustomSoTien"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="10000"
               android:textSize="18sp"
               android:padding="10dp"
               android:layout_weight="1"
               />
           <TextView
               android:id="@+id/txtCustomDonVi"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="VND"
               android:textSize="18sp"
               android:padding="10dp"
               android:layout_weight="1"
               />
           <ImageView
               android:id="@+id/imgKhoiPhuc"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/baseline_restore_24"
               app:tint="@color/purple_700"
               android:padding="10dp"/>
           <ImageView
               android:id="@+id/imgDeleteForever"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/baseline_delete_forever_24"
               app:tint="@color/purple_700"
               android:padding="10dp"/>
       </LinearLayout>
   </RelativeLayout>
</RelativeLayout>